if post.status != 'public'
	+request.redirect(post.url_path)
extends base
block title
	title= post.title + " - " + site.title
block content
	article.post.content
		h2.title= post.title
		.post_content= post.content
		.info
			span.date= post.date.format('%Y-%m-%d %H:%M')
			ul.tags
				if post.tags
					for tag in post.tags
						li
							a(href="/tag/{{tag}}")= tag
		.clearfix
	.other_posts
		if posts.previous_one
			a.prev(href='{{posts.previous_one.url}}')=posts.previous_one.title
		if posts.next_one
			a.next(href='{{posts.next_one.url}}')=posts.next_one.title
		.clearfix
	include include/comments.jade
